# Select ufo gen9 libs
UFO_ENABLE_GEN := gen9

# Defines Intel library for GPU accelerated Renderscript:
OVERRIDE_RS_DRIVER := libRSDriver_intel.so

# Use external/drm-bxt
LIBDRM_VER ?= bxt

# Force atomic modesetting on gen9 and above
BOARD_KERNEL_CMDLINE += drm.atomic=1 i915.nuclear_pageflip=1 i915.enable_rc6=1
